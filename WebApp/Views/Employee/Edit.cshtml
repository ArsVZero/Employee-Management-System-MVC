@model WebApp.Models.Employee
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2 text-center">
            <div class="card mt-5">
                <div class="card-header">
                    <h1 class="display-4 lead">Edit Employee Data</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <div class="form-group">
                            <label asp-for="Name" class="float-left">Name</label>
                            <input type="hidden" asp-for="Id" />
                            <input type="text" asp-for="Name" class="form-control" placeholder="Edit name">
                        </div>
                        <div class="form-group">
                            <label asp-for="City" class="float-left">City</label>
                            <input type="text" asp-for="City" class="form-control" placeholder="Edit city">
                        </div>
                        <div class="form-group">
                            <label asp-for="State" class="float-left">State</label>
                            <input type="text" asp-for="State" class="form-control" placeholder="Edit state">
                        </div>
                        <div class="form-group">
                            <label asp-for="Salary" class="float-left">Salary</label>
                            <input type="text" asp-for="Salary" class="form-control" placeholder="Edit salary">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-outline-success float-right">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>