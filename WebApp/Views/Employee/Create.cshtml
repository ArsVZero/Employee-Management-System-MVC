@model WebApp.Models.Employee
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2 text-center">
            <div class="card mt-5">
                <div class="card-header">
                    <h1 class="display-4 lead">Create Employee Data</h1>
                    <p class="text-center text-danger mb-1 mt-3 lead">@TempData["message"]</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="Name" class="float-left">Name</label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter name">
                            <span asp-validation-for="Name" class="text-danger float-right"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="City" class="float-left">City</label>
                            <input type="text" asp-for="City" class="form-control" placeholder="Enter city">
                            <span asp-validation-for="City" class="text-danger float-right"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="State" class="float-left">State</label>
                            <input type="text" asp-for="State" class="form-control" placeholder="Enter state">
                            <span asp-validation-for="State" class="text-danger float-right"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Salary" class="float-left">Salary</label>
                            <input type="number" asp-for="Salary" class="form-control" placeholder="Enter salary">
                            <span asp-validation-for="Salary" class="text-danger float-right"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-outline-success float-left">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>